<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CharaterOverflow">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="Raisedbutton" parent="Widget.AppCompat.Button.Colored">

        <item name="backgroundTint">@color/colorRaisedBtn</item>
        <item name="android:textColor">@color/colorRaiseBtntext</item>

    </style>

    <style name="Flatbutton" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:textColor">@color/colorFlatbtn</item>

    </style>

</resources>
