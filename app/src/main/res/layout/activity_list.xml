<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.divya.udemymaterialdesign.ListActivity">

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bottom_nav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Bottom Navigation"
        style="@style/ButtonTheme"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="Button"
        style="@style/ButtonTheme"
        android:layout_below="@+id/bottom_nav"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:text="Check Box"
        style="@style/ButtonTheme"
        android:layout_below="@+id/button"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/confirmation_dialog"
        android:layout_centerHorizontal="true"
        android:text="Confirmation Dialog"
        style="@style/ButtonTheme"
        android:layout_below="@+id/checkBox"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/dialog"
        android:layout_centerHorizontal="true"
        android:text="Dialog"
        style="@style/ButtonTheme"
        android:layout_below="@+id/confirmation_dialog"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:text="Progress Bar"
        style="@style/ButtonTheme"
        android:layout_below="@+id/dialog"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/progress_dialog"
        android:layout_centerHorizontal="true"
        android:text="Progress Dialog"
        style="@style/ButtonTheme"
        android:layout_below="@+id/progress_bar"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio_button"
        android:layout_centerHorizontal="true"
        android:text="Radio Button"
        style="@style/ButtonTheme"
        android:layout_below="@+id/progress_dialog"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/snack_bar"
        android:layout_centerHorizontal="true"
        android:text="Snack Bar"
        style="@style/ButtonTheme"
        android:layout_below="@+id/radio_button"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/switch_button"
        android:layout_centerHorizontal="true"
        android:text="Switch"
        style="@style/ButtonTheme"
        android:layout_below="@+id/snack_bar"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:text="Text Design"
        style="@style/ButtonTheme"
        android:layout_below="@+id/switch_button"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/view_pager"
        android:layout_centerHorizontal="true"
        android:text="View Pager"
        style="@style/ButtonTheme"
        android:layout_below="@+id/text"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login_registration"
        android:layout_centerHorizontal="true"
        android:text="Login Registration"
        style="@style/ButtonTheme"
        android:layout_below="@+id/view_pager"/>

</RelativeLayout>
</ScrollView>
